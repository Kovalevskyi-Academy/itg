{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "CHOICE",
  "type": "object",
  "properties": {
    "choiceText": {
      "description": "Description of the essence of the choice.",
      "type": "string",
      "minLength": 1,
      "example": "Current choice: go on a great journey in the ass to a cockroach!"
    },
    "nextNodeUuid": {
      "description": "Unique identifier of next Node.",
      "$ref": "uuid.json",
      "example": "7131532b-6053-4380-bc7d-179ee146aabp"
    }
  },
  "required": ["nextNodeId", "choiceText"]
}
